    <xpath>*/FactionDef/goodwillDailyGain</xpath>
    <nomatch Class="PatchOperationAdd">
        <xpath>*/FactionDef/goodwillDailyGain</xpath>
        <value>
            <goodwillDailyGain>0.00</goodwillDailyGain>
        </value>
    </nomatch>
