        <xpath>*/FactionDef/goodwillDailyFall</xpath>
        <value>
            <goodwillDailyFall>0.00</goodwillDailyFall>
        </value>
    </nomatch>
    <match Class="PatchOperationReplace">
        <xpath>*/FactionDef/goodwillDailyFall</xpath>
        <value>
            <goodwillDailyFall>0.00</goodwillDailyFall>
        </value>
    </match>
</Operation>
</Patch>